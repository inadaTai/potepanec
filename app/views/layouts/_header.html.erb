<!-- HEADER -->
<div class="header clearfix">
  <!-- TOPBAR -->
  <div class="topBar">
    <div class="container">
      <div class="row">
        <div class="col-md-6 hidden-sm hidden-xs">
          <ul class="list-inline">
            <li><%= link_to "" , '#', class: "fa fa-twitter" %></li>
            <li><%= link_to "" , '#', class: "fa fa-facebook" %></li>
          </ul>
        </div>
        <div class="col-md-6 col-xs-12">
          <ul class="list-inline pull-right">
            <li><!-- <span><a data-toggle="modal" href='.login-modal'>ログイン</a><small>or</small><a data-toggle="modal" href='#signup'>新規登録</a></span> --></li>
            <li class="dropdown searchBox">
              <a href="javascript:void(0)" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-search"></i></a>
              <ul class="dropdown-menu dropdown-menu-right">
                <%= form_tag('/potepan/search', method: "get", id: "form01") do %>
                  <li>
                    <span class="input-group topbar-search">
                      <%= text_field_tag(:search_word, '', { class: "form-control", placeholder: "Search…", aria: { describedby: "basic-addon2" } })%>
                      <%= submit_tag "検索", class: "input-group-addon addPointer", id: "basic-addon2" %>
                    </span>
                  </li>
                <% end %>
              </ul>
            </li>
            <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" id="topbar-shoppting-cart"><i class="fa fa-shopping-cart"></i></a>
            <ul class="dropdown-menu dropdown-menu-right">
              <li>現在カートにある商品</li>
              <% if current_order %>
                <% current_order.line_items.each do |item| %>
                  <li class="<%= "lineitem-#{item.id}" %>">
                    <%= link_to potepan_cart_path do %>
                      <div class="media">
                        <%= image_tag(item.variant.gallery.images.first.url(:mini), class: "media-left media-object", alt: 'cart-Image') if item.variant.gallery.images.first.try(:url, :mini) %>
                        <div class="media-body">
                          <h5 class="media-heading"><%= item.name %><br><span><%= item.quantity %> × <%= item.display_price %></span></h5>
                        </div>
                      </div>
                    <% end %>
                  </li>
                <% end %>
              <% end %>
            </ul>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <!-- NAVBAR -->
  <nav class="navbar navbar-main navbar-default" role="navigation">
    <div class="container">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <section class="navbar-brand">
          <%= link_to potepan_root_path do %>
            <%= image_tag("img/logo.png", alt: "Logo") %>
          <% end %>
        </section>
      </div>
      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse navbar-ex1-collapse">
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to "HOME", potepan_root_path %></li>
          <li class="dropdown megaDropMenu active">
            <a href="javascript:void(0)" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-delay="300" data-close-others="true" aria-expanded="false">Shop</a>
          </li>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div>
  </nav>
</div>
