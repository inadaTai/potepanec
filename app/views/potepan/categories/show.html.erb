<% provide(:title, @taxon.name) %>
<% provide(:page_title, @taxon.name) %>
<!-- MAIN CONTENT SECTION -->
<section class="mainContent clearfix productsContent">
  <div class="container">
    <div class="row">
      <div class="col-md-3 col-sm-4 col-xs-12 sideBar">
        <%= render 'sidebar_categories', taxonomies: @taxonomies %>
        <%= render 'sidebar_color', option_type: @option_type, filter_taxon: @taxon %>
        <%= render 'sidebar_size', option_type: @option_type, filter_taxon: @taxon %>
      </div>
      <div class="col-md-9 col-sm-8 col-xs-12">
        <%= render 'filter_area' %>
        <div class="row">
          <%= render partial: 'product', collection: @products %>
        </div>
      </div>
    </div>
  </div>
</section>
<%= render 'layouts/footer_light' %>
